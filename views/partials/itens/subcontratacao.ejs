<form id="myForm">
    <div class="container px-5 pb-3">
        <!-- Cabeçalho da página  -->
        <%- include('../titulo'); %>

        <div class="bg-light rounded-4 py-5 px-4 px-md-5" style="height: 564px;">
            <div class="container text-center h-100" >
                
                <!-- 08 Subcontratação -->
                <div id="view08" class="row h-50 justify-content-center">
                    <div class="col-sm-12 align-self-start">
                        <h2 class="fw-bolder">Subcontratação &nbsp<i class="bi bi-question-circle text-success" data-bs-toggle="modal" data-bs-target="#modal6"></i></h2>
                        <p class="lead fw-normal text-muted mb-0">
                            Haverá permissão para subcontratação do objeto a ser licitado?
                        </p>
                    </div>
                    <div class="col-sm-6 align-self-center">
                        <div class="input-group input-group-static mb-3">
                            <div class="btn-group form-control bg-light" style="border: 0;" role="group" aria-label="Basic radio toggle button group">
                                <input type="radio" class="btn-check" name="subcontratacao" id="subcontratacao1" value=1 autocomplete="off">
                                <label class="btn btn-outline-primary" for="subcontratacao1">Sim</label>
                                
                                <input type="radio" class="btn-check" name="subcontratacao" id="subcontratacao2" value=0 autocomplete="off" checked>
                                <label class="btn btn-outline-primary" for="subcontratacao2">Não</label>
                            </div>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="item" value="<%= item %>">
                <input type="hidden" name="id" value="<%= id %>">


            </div> <!-- / container -->
            <!-- Barra de progresso -->
            <%- include('../progress-bar', {correntValue: progressBar} ); %>
        </div><!-- / bg-light  -->
    </div>
    <!-- Botão do submit -->
    <%- include('../buttons'); %>
</form>
