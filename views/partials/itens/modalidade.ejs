<div class="container px-5 pb-3">
    <!-- Cabeçalho da página  -->
    <%- include('../titulo'); %>

    <div class="bg-light rounded-4 py-5 px-4 px-md-5" style="height: 564px;">
        <div class="container text-center h-100" >

            <!-- 02 modalidade-->
            <div class="row h-50 justify-content-center">
                <div class="col-sm-12 align-self-start">
                    <h2 class="fw-bolder">Modalidade &nbsp<i class="bi bi-question-circle"></i></h2>
                    <p class="lead fw-normal text-muted">
                        Escolha a modalidade de licitação ou procedimento de contratação direta.                            
                    </p>
                </div>

                <div class="col-sm-6 align-self-center">
                    <!-- select -->
                    <div class="form-floating mb-3">
                        <div class="input-group input-group-static mb-4">
                            <select name="modalidade" id="modalidade" class="form-control text-center size-font" >
                                <option value="" noSelected>Selecione</option>
                                <option value="1">Pregão</option>
                                <option value="2">Concorrência</option>
                                <option value="3">Dispensa</option>
                                <option value="4">Inexigibilidade</option>
                            </select>
                        </div>
                        <div class="invalid-feedback" data-sb-feedback="name:required">A name is required.</div>
                    </div>
                </div>
            </div>
            <input type="hidden" name="item" value="<%= item %>">
            <input type="hidden" name="id" value="<%= id %>">

        </div> <!-- / container -->
        <!-- Barra de progresso -->
        <%- include('../progress-bar', {correntValue: progressBar} ); %>
    </div><!-- / bg-light  -->
</div>
<!-- Botão do submit -->
<%- include('../buttons'); %>

